{% extends 'front/template.html.twig' %}

{% block title %}{{ parent() }} - Liste des pizzas{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-5">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h1>Liste des pizzas</h1>
        </div>
    </div>
    <div class="row mt-3">
        {% for pizza in pizzas %}
        <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <div class="card" style="width: 18rem;">
                <img src="{{ pizza.urlMiniature }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ pizza.nom }} - {{ pizza.prix }}â‚¬</h5>
                    <ul>
                        {% for ingredient in pizza.ingredients %}
                        <li>{{ ingredient }}</li>
                        {% endfor %}
                    </ul>
                    <a href="#" class="btn btn-block btn-primary">Ajouter au panier</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
