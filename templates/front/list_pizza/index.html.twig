{% extends 'front/template.html.twig' %}

{% block title %}{{ parent() }} - Bienvenue{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="#">AppPizza... <em style="font-size: 80%;">Les pizzas à la mode du pilat</em></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">

            <li class="nav-item active">
                <a class="nav-link" href="#"><div class="btn btn-outline-primary">Pannier <i class="fa fa-shopping-basket" aria-hidden="true"></i></div></a>
            </li>
        </ul>
    </div>
</nav>
<div class="container">
    <div class="row mt-3">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h1>Liste des pizzas</h1>
        </div>
    </div>
    <div class="row mt-3">
        {% for pizza in pizzas %}
        <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <div class="card" style="width: 18rem;">
                <img src="{{ pizza.urlMiniature }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ pizza.nom }} - {{ pizza.prix }}€</h5>
                    <ul>
                        {% for ingredient in pizza.ingredients %}
                        <li>{{ ingredient }}</li>
                        {% endfor %}
                    </ul>
                    <a href="#" class="btn btn-block btn-primary">Ajouter au panier</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
